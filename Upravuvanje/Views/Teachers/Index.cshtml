@model Upravuvanje.ViewModels.TeacherViewModels

@{
    ViewData["Title"] = "Index";
}

<h1>Листа на професори</h1>

<p>
    <a asp-action="Create">Креирај нов професор</a>
</p>
<form asp-controller="Teachers" asp-action="Index" method="get">
    <p><span>Степен на образование:</span>
        <select asp-for="ProfesorStepen" asp-items="Model.StepenObrazovani">
            <option value="">Сите</option>
        </select><span>  Акаденски ранк:</span>
        <select asp-for="ProfesorRank" asp-items="Model.AkademskiRank">
            <option value="">Сите</option>
        </select>
        Име и Презиме: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Филтрирај" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Profesori[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesori[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesori[0].Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesori[0].AcademicRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesori[0].OfficeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesori[0].HireDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Profesori)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcademicRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HireDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Измени</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Избриши</a>
                </td>
            </tr>
        }
    </tbody>
</table>
